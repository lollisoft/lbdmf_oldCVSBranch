MOD_INCL=$(STD_INCL) -I../../lbHook/linuxCode \
    -I$(DEVROOT)/Projects/$(REPO_NAME)/vendor/XML4C/xml4c-src3_5_1/include \
    -I$(DEVROOT)/Projects/$(REPO_NAME)/BaseDevelopment/lbclasses
